<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTripActivity">

    <TextView
        android:id="@+id/textViewCreateTime"
        android:layout_width="101dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="Time"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewCreatePeopleNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreateDepartDate" />

    <CheckBox
        android:id="@+id/checkBoxCanDrive"
        android:layout_width="131dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:text="I can drive"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateTrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreateCarModel" />

    <Button
        android:id="@+id/buttonCreateTrip"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:onClick="createTripClicked"
        android:text="CREATE A TRIP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCanDrive" />

    <TextView
        android:id="@+id/textViewCreateTo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="179dp"
        android:gravity="center"
        android:text="To"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewCreateBreakNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCreateFrom"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCreateFrom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="From"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewCreateDepartDate"
        app:layout_constraintEnd_toStartOf="@+id/textViewCreateTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCreateDepartDate"
        android:layout_width="225dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:gravity="center"
        android:text="Depart Date"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewCreateTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreateFrom" />

    <TextView
        android:id="@+id/textViewCreateCarModel"
        android:layout_width="225dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Car Model"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxCanDrive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreatePeopleNumber" />

    <TextView
        android:id="@+id/textViewCreatePeopleNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="People\nNumber"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewCreateCarModel"
        app:layout_constraintEnd_toStartOf="@+id/textViewCreateBreakNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreateTime" />

    <TextView
        android:id="@+id/textViewCreateBreakNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="292dp"
        android:gravity="center"
        android:text="Break\nNumber"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCreatePeopleNumber"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreateTo" />

</androidx.constraintlayout.widget.ConstraintLayout>