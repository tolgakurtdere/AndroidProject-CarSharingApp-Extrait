<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="false"
    tools:context=".CarDetailsActivity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textViewCarDetailsModel"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_text1"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="Model : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCarDetailsFuelType"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_text1"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="Fuel Type : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarDetailsKm" />

    <TextView
        android:id="@+id/textViewCarDetailsLocation"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_text1"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="Location : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarDetailsFuelType" />

    <TextView
        android:id="@+id/textViewCarDetailsLastUsedTime"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_text1"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="Last Used Time : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarDetailsLocation" />

    <TextView
        android:id="@+id/textViewCarDetailsKm"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_text1"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="Km : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarDetailsYear" />

    <TextView
        android:id="@+id/textViewCarDetailsYear"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_text1"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="Year : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarDetailsModel" />

    <CheckBox
        android:id="@+id/checkBoxCarDetailsAutomatic"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="118dp"
        android:checked="false"
        android:clickable="false"
        android:text="Automatic"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarDetailsLastUsedTime" />

    <CheckBox
        android:id="@+id/checkBoxCarDetailsParkingGuidance"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="118dp"
        android:checked="false"
        android:clickable="false"
        android:text="Parking Guidance"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCarDetailsLaneAssist" />

    <CheckBox
        android:id="@+id/checkBoxCarDetailsLaneAssist"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="118dp"
        android:checked="false"
        android:clickable="false"
        android:text="Lane Assist"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCarDetailsAutomatic" />

</androidx.constraintlayout.widget.ConstraintLayout>