<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#54B7B5B1"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_border_black">

        <TextView
            android:id="@+id/recyclerTextViewTime"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/bahnschrift"
            android:gravity="center"
            android:text="Time"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/recyclerTextViewCarModel"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/bahnschrift"
            android:gravity="center"
            android:text="Car Model"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/recyclerTextViewBreakNumber"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bahnschrift"
            android:gravity="center"
            android:text="Time"
            android:textColor="#707070"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bahnschrift"
            android:gravity="center"
            android:text="Car Model"
            android:textColor="#707070"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/recyclerButtonSelect"
            android:layout_width="66dp"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="39dp"
            android:background="@drawable/custom_button_1"
            android:fontFamily="@font/bahnschrift"
            android:text="SELECT"
            android:textColor="#FF961D"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recyclerTextViewCarModel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recyclerTextViewPeopleNumber"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/bahnschrift"
            android:gravity="center"
            android:text="People"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/recyclerTextViewTime"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bahnschrift"
            android:gravity="center"
            android:text="Seat"
            android:textColor="#707070"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recyclerTextViewBreakNumber"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/bahnschrift"
            android:gravity="center"
            android:text="Break"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/recyclerTextViewPeopleNumber"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bahnschrift"
            android:gravity="center"
            android:text="Break"
            android:textColor="#707070"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>