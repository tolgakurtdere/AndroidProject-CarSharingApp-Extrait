<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg">

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="surname"
        android:fontFamily="@font/bahnschrift"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailAddress2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName"
        android:background="@drawable/custom_text2"
        android:paddingLeft="5dp"/>

    <EditText
        android:id="@+id/editTextEmailAddress2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="e-mail address"
        android:fontFamily="@font/bahnschrift"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextPassword2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSurname"
        android:background="@drawable/custom_text2"
        android:paddingLeft="5dp"/>

    <Button
        android:id="@+id/buttonRegister2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:onClick="RegisterClicked"
        android:text="REGISTER"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxDriverLicense"
        android:background="@drawable/custom_text1"/>

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="244dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="22dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Personal Information"
        android:textSize="24sp"
        android:fontFamily="@font/bahnschrift"
        app:layout_constraintBottom_toTopOf="@+id/editTextIdNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="name"
        android:fontFamily="@font/bahnschrift"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextSurname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIdNo"
        android:background="@drawable/custom_text2"
        android:paddingLeft="5dp"/>

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="password"
        android:fontFamily="@font/bahnschrift"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxDriverLicense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailAddress2"
        android:background="@drawable/custom_text2"
        android:paddingLeft="5dp"/>

    <CheckBox
        android:id="@+id/checkBoxDriverLicense"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:text="I have driver license"
        android:fontFamily="@font/bahnschrift"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegister2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword2" />

    <EditText
        android:id="@+id/editTextIdNo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="id no"
        android:fontFamily="@font/bahnschrift"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/editTextName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
        android:background="@drawable/custom_text2"
        android:paddingLeft="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>