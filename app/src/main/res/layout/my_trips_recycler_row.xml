<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/myTripsRecyclerTextViewTo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="To"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myTripsRecyclerTextViewFrom"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="From"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toStartOf="@+id/myTripsRecyclerTextViewTo"
        app:layout_constraintStart_toEndOf="@+id/myTripsRecyclerTextViewFrom"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trending_flat_24px" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Seat"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/myTripsRecyclerTextViewTo" />

    <TextView
        android:id="@+id/myTripsRecyclerTextViewTime"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Time"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/myTripsRecyclerTextViewPeopleNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/myTripsRecyclerTextViewBreakNumber"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Break"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/myTripsRecyclerTextViewCarModel"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Time"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/myTripsRecyclerTextViewFrom" />

    <TextView
        android:id="@+id/myTripsRecyclerTextViewDate"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Date"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/myTripsRecyclerTextViewTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Date"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTripsRecyclerTextViewFrom" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginEnd="3dp"
        android:gravity="center"
        android:text="Car Model"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTripsRecyclerTextViewTo" />

    <TextView
        android:id="@+id/myTripsRecyclerTextViewCarModel"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="3dp"
        android:gravity="center"
        android:text="Car Model"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Break"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/myTripsRecyclerTextViewTo" />

    <TextView
        android:id="@+id/myTripsRecyclerTextViewPeopleNumber"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="People"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/myTripsRecyclerTextViewBreakNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>